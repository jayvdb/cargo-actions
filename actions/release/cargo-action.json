{
  "title": "Update Version Number and Publish Release",
  "path": "./release.yaml.hbs",
  "prompts": [
    {
      "type": "input",
      "field": "release_base_name",
      "prompt": "Enter your default release base name"
    },
    {
      "type": "select",
      "field": "toolchain",
      "prompt": "Select your Rust toolchain",
      "default": 0,
      "options": [
        {
          "label": "Stable",
          "value": "stable"
        },
        {
          "label": "Beta",
          "value": "beta"
        },
        {
          "label": "Nightly",
          "value": "nightly"
        }
      ]
    }
  ],
  "finishTooltip": "Please ensure that you have set the GitHub token in your GitHub secrets with the name 'CI_GITHUB_TOKEN'."
}
